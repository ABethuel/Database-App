<RelativeLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="348dp"
        android:layout_height="219dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="190dp"
        android:gravity="center"
        android:text="You want to find out in which year and with which team a driver won an F1 world
championship? Type his name in the search bar and hall this information will appear on the screen!"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:text="Help"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/backToMainActivityButton"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="123dp"
        android:text="Main Menu" />

    <Button
        android:id="@+id/aboutButton"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/backToMainActivityButton"
        android:layout_centerHorizontal="true"
        android:text="About the App" />


</RelativeLayout>